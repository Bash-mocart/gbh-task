pipeline {
    agent any

    stages {
        stage('checkout'){
            steps{
                git branch: 'main', credentialsId: '0a43236a-2c5d-4eb5-9027-fb6a97e78760', url: 'https://github.com/Bash-mocart/gbh'
            }
        }
        stage('Install Web Api') {
            when { changeset "demo-api-main/*"}
            steps {
                sh 'npm install'
            }
        }

        stage('Install Web App') {
            when { changeset "demo-webapp-main/*"}
            steps {
                sh 'npm install'
            }
        }

        stage('Build Web Api'){
            when { changeset "demo-api-main/*"}
            steps {
                sh 'npm run build'
            }
        }

        stage('Build Web App'){
            when { changeset "demo-webapp-main/*"}
            steps {
                sh 'npm run build'
            }
        }

        stage (' PR check ') {
            when {
                branch 'PR-*'  
            }
            steps {
            sh 'ansible-playbook deploy-backend.yml -i inventory.txt'
            }

        }
        
    }
}